
@{
    ViewBag.Title = "Venta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Pacientes
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i>Inicio</a></li>
        <li><a href="#">Gestión general - Pacientes</a></li>
        <li class="active">Pacientes</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">

    @using (Ajax.BeginForm("BuscarPaciente", "Paciente", null,
                                        new AjaxOptions
                                        {
                                            HttpMethod = "Post",
                                            UpdateTargetId = "CargarTabla",
                                            LoadingElementId = "CargarImagen",
                                            InsertionMode = InsertionMode.Replace
                                        }, new { @role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-error" })

        <div class="box box-info" style="padding:15px;padding-top:5px;margin-bottom:0px">
            <div class="box-header">
                <div class="col-md-12" style="margin-bottom: 20px;padding: 0%">
                    <label class="col-md-12" style="padding-left:0%">Ingrese nombre o apellido o documento del paciente</label>
                    @Html.TextBoxFor(m => m.busqueda, new { @style = "width:40%", @class = "form-control col-md-6" })
                    <input id="btnconsulta" type="submit" value="Consultar" style="float:left;width:20%" class="btn btn-success col-md-6" />
                    <div class="input-group input-group-sm pull-right " style="width: 60px;">
                        <a id="btnNuevo" data-toggle="modal" href="#myModal" class="btn btn-block btn-primary">Nuevo registro</a>
                    </div>
                </div>
                <hr />

            </div>



        </div>
            <!-- /.box-body -->
    }
    <div class="box box-info" style="padding:15px;padding-top:5px;margin-top:0px;border-top:0px">
        <div class="container">
            <img src="~/Content/images/cargando.gif" id="CargarImagen" width="40" height="40" style="display:none" />
        </div>
        <div class="box-body table-responsive " id="CargarTabla">

        </div>
    </div>
    <!-- /.box -->
</section>





@section scripts{
    <script src="~/Scripts/Paciente/Paciente.js"></script>
    <link href="~/Content/plugin/datepicker/datepicker3.css" rel="stylesheet" />
    <script src="~/Content/plugin/datepicker/bootstrap-datepicker.js"></script>


}