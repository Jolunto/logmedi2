@model IEnumerable<Models.paciente>

@{
    Layout = null;
}

<table class="table table-bordered table-hover col-md-12" id="tblPacientes">
    <thead>
        <tr>
            <th>Documento</th>
            <th>Nombres</th>
            <th>Apellidos</th>
            <th>Estado</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.id_paciente</td>
                <td>@e.primer_nombre @e.segundo_nombre</td>
                <td>@e.primer_apellido @e.segundo_apellido</td>
                @{
                    if (e.estado == 1)
                    {
                        <td><span class="label label-success">Activo</span></td>
                    }
                    else
                    {
                        <td><span class="label label-danger">Inactivo</span></td>
                    }
                }
                <td class="text-right">
                    <a class="btnEditar btn btn-default" href="#myModal" data-toggle="modal" data-id="@e.id_paciente"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                    <a class="btnDetalles btn btn-default" href="#myModal" data-toggle="modal" data-id="@e.id_paciente"><i class="fa fa-eye" aria-hidden="true"></i></a>

                </td>
            </tr>
                    }

    </tbody>
</table>


<link href="~/Content/plugin/datatables/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Content/plugin/datatables/jquery.dataTables.min.js"></script>
<script src="~/Scripts/Paciente/Paciente.js"></script>
<script>$(document).ready(function () {
    $('#tblPacientes').DataTable({

    });
});</script>