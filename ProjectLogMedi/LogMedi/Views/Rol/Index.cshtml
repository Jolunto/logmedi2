@model IEnumerable<Models.rol>
@{
    ViewBag.Title = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>
        Gestión general - Roles
    </h1>
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index","Home")"><i class="fa fa-dashboard"></i>Inicio</a></li>
        <li><a href="#">Gestión general - Roles</a></li>
        <li class="active">Roles</li>
    </ol>
</section>

<!-- Main content -->
<section class="content">


    <div class="box box-info" style="padding:15px;padding-top:5px">

        <div class="box-header">         
            <h3></h3>
            <div class="box-tools">
                <div class="input-group input-group-sm pull-left " style="width: 60px;">
                    <a id="btnNuevo" data-toggle="modal"  href="#myModal" class="btn btn-block btn-primary">Nuevo registro</a>
                </div>
            </div>
            
            
        </div>

        <div class="box-body table-responsive ">
            <table class="table table-bordered table-hover col-md-12"   id="tblRoles">
                <thead>
                    <tr>

                        <th style="width:20%">Nombre</th>
                        <th style="width:20%">Estado</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model)
                    {
                        <tr>

                            <td>@r.nombre</td>
                            @{
                                if (r.estado == 1)
                                {
                                    <td><span class="label label-success">Activo</span></td>
                                }
                                else
                                {
                                    <td><span class="label label-danger">Inactivo</span></td>
                                }
                            }
                            <td class="text-right">
                                <a class="btnEditar btn btn-default" href="#myModal" data-toggle="modal" data-id="@r.id_rol" ><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                <a class="btnDetalles btn btn-default" href="#myModal" data-toggle="modal" data-id="@r.id_rol"><i class="fa fa-eye" aria-hidden="true"></i></a>

                            </td>
                        </tr>
                                }

                </tbody>
            </table>
        </div>
        <!-- /.box-body -->
    </div>
    <!-- /.box -->





</section>





@section scripts{

<link href="~/Content/plugin/datatables/jquery.dataTables.min.css" rel="stylesheet" />
<script src="~/Content/plugin/datatables/jquery.dataTables.min.js"></script>
<script src="~/Scripts/Rol/Rol.js"></script>
 
}
